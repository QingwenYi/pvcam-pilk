#!/usr/bin/make -f
UPSTREAM_VERSION := $(shell dpkg-parsechangelog | sed -n 's/^Version: *\([^-]\+\)-.\+/\1/p')


%:
	dh $@ --with dkms

override_dh_dkms:
	dh_dkms -V

override_dh_auto_build:
	:

override_dh_install:
	dh_install
ifeq ($(DIST_NAME),Ubuntu)
	install -m 644 -p -D debian/apport-hook.py \
            debian/$(sname)/usr/share/apport/package-hooks/source_$(sname).py
        install -m 644 -p -D debian/apport-hook.py \
            debian/$(gdkms)/usr/share/apport/package-hooks/$(gdkms).py
endif

override_dh_auto_install:
	dh_install *.[chS] Makefile usr/src/pvcam-pilk-usb-$(UPSTREAM_VERSION)
	dh_install 10-pi.rules /lib/udev/rules.d/



